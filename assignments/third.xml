<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- constructor injection Application-->
	<bean id="address" class="third.Address">
		<constructor-arg index="0" value="Indore"></constructor-arg>
		<constructor-arg index="1" value="MP"></constructor-arg>
		<constructor-arg index="2" value="451220"></constructor-arg>
	</bean>
	<bean id="org" class="third.Organization" autowire="constructor">
		<constructor-arg index="0" value="Microsoft"></constructor-arg>
	</bean>
	<bean id="emp" class="third.Employee" autowire="constructor">
		<constructor-arg index="0" value="Raja Sing Goud"></constructor-arg>
		<constructor-arg index="1" value="1001"></constructor-arg>
		<constructor-arg index="2" value="1500000.00"></constructor-arg>
	</bean>
	
