	<!-- setter injection application--> 
	<bean id="address" class="second.di.usingxml.Address">
		<property name="city" value="Indore"></property>
		<property name="state" value="mp"></property>
		<property name="pincode" value="451220"></property>
	</bean>
	<bean id="home" class="second.di.usingxml.Address">
		<property name="city" value="Piplgone"></property>
		<property name="state" value="mp"></property>
		<property name="pincode" value="451224"></property>
	</bean>
	<bean id="org" class="second.di.usingxml.Organization" autowire="byName">
		<property name="name" value="Deloite"></property>
	</bean>
	<bean id="emp" class="second.di.usingxml.Employee" autowire="byType">
		<property name="name" value="Raja Sing Goud"></property>
		<property name="id" value="1001"></property>
		<property name="salary" value="1500000.00"></property>
		<property name="address" ref="home"></property>
	</bean>
</beans>