<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="area1" class="beanWiring.Area">
		<property name="flat" value="202"></property>
		<property name="building" value="Ganesh Villa"></property>
		<property name="street" value="303-A Block"></property>
	</bean>
	<bean id="address1" class="beanWiring.Address">
		<property name="city" value="Indore"></property>
		<property name="state" value="MP"></property>
		<property name="area" ref="area1"></property>       <!-- Bean Wiring -->
	</bean>
	<bean id="emp1" class="beanWiring.Employee">
		<constructor-arg value="Kundan"></constructor-arg>
		<constructor-arg value="500000"></constructor-arg>
		<constructor-arg ref="address1"></constructor-arg>  <!-- Bean Wiring -->
	</bean>
	<bean id="emp2" class="beanWiring.Employee">
		<constructor-arg value="Shakti"></constructor-arg>
		<constructor-arg value="400000"></constructor-arg>
		<constructor-arg ref="address1"></constructor-arg>
	</bean>
	
</beans>